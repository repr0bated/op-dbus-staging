[Unit]
Description=MCP Chat Server with Unified Introspection
Documentation=https://github.com/operation-dbus
After=network.target dbus.service
Wants=dbus.service

[Service]
Type=simple
User=jeremy
WorkingDirectory=/home/jeremy/op-dbus-staging
ExecStart=/home/jeremy/.cargo/bin/mcp-chat
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=mcp-chat

# Environment variables for AI integration
Environment="RUST_LOG=info"
Environment="RUST_BACKTRACE=1"

# Uncomment and set your Ollama API key for AI chat
# Environment="OLLAMA_API_KEY=your-api-key-here"
# Environment="OLLAMA_DEFAULT_MODEL=mistral"

# Resource limits
MemoryLimit=2G
CPUQuota=80%

[Install]
WantedBy=multi-user.target
