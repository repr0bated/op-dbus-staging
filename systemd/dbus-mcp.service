[Unit]
Description=D-Bus MCP Server for operation-dbus
Documentation=https://github.com/operation-dbus
After=network.target dbus.service

[Service]
Type=simple
User=jeremy
WorkingDirectory=/home/jeremy/op-dbus-staging
Environment="RUST_LOG=info"
ExecStart=/usr/local/bin/dbus-mcp
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=dbus-mcp

[Install]
WantedBy=multi-user.target
